<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="UserInfo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginStart">@dimen/margin_xlarge</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="UserThumbnail">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_thumbnail</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>